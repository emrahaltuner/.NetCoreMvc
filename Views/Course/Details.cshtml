@model Course
@section Css{
<style>
    .card-title {
        margin-bottom: 1.5rem;
        color: red;
    }
</style>
}

<main>
    <h1>Course list</h1>

    <div class="card mb-3" id="kurs_@Model.Id">
        <div class="row">
            <div class="col-md-4">
                <img src="~/img/@Model.Image" class="img-fluit rounded-start" alt="">
            </div>
            <div class="col-md-8">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>

            </div>
        </div>
    </div>

</main>